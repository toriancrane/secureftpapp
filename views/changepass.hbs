<div class="container">
        <form class="form-horizontal" role="form" method="POST">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <h2>Please Update Your Password</h2>
                    <hr>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div>
                        {{{messages}}}
                        {{#if errors}} 
                            {{#each errors}}
                                {{msg}}
                            {{/each}} 
                        {{/if}}
                    </div>
                    <div class="form-group">
                        <label class="sr-only">Username</label>
                        <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                            <div class="input-group-addon"></div>
                            <input type="text" name="username" class="form-control" id="username"
                                   placeholder="example@example.com" required>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="sr-only" for="password">Old Password</label>
                        <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                            <div class="input-group-addon"></div>
                            <input type="password" name="temp_password" class="form-control" id="temp_password"
                                   placeholder="Enter Temporary Password" required>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="sr-only" for="password">New Password</label>
                        <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                            <div class="input-group-addon"></div>
                            <input type="password" name="new_password" class="form-control" id="new_password"
                                   placeholder="Enter New Password" onkeyup='check();' required>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="sr-only" for="password">Re-Enter New Password</label>
                        <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                            <div class="input-group-addon"></div>
                            <input type="password" name="confirm_password" class="form-control" id="confirm_password"
                                   placeholder="Confirm Password" onkeyup='check();' required>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-control-feedback">
                        <span class="text-danger align-middle">
                        <span id='message'></span>   
                        </span>
                    </div>
                </div>
            </div>
            <div class="row" style="padding-top: 1rem">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <button type="submit" id="submit" class="btn btn-success btn-block"><i class="fa fa-sign-in"></i> Submit</button>
                </div>
            </div>
        </form>
    </div>
    
    <script src="/javascripts/changepass.js"></script>