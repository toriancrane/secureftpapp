<link rel="stylesheet" type="text/css" href="/stylesheets/upload.css"> 

<form method="post" enctype="multipart/form-data">
<div class="container"> <br />
    <div class="row justify-content-center">
    	<div class="col-md-8">
			<div class="card">
				<div class="card-header"><strong>Upload files</strong> <small> </small></div>
				<div class="card-body">
				    <form method="POST" enctype="multipart/form-data">
                    	<!-- COMPONENT START -->
                    	<div class="form-group">
                    		<div class="input-group mb-3">
                              <div class="custom-file">
                                <input type="file" class="custom-file-input" id="inputGroupFile03" name='fileName'>
                                <label class="custom-file-label" for="inputGroupFile03" id="customeFile">Choose file...</label>
                              </div>
                            </div>
                    	</div>
                    	<!-- COMPONENT END -->
                    	<small id="fileHelp" class="form-text text-muted text-center">This is some placeholder block-level help text for the above input. It's a bit lighter and easily wraps to a new line.</small>
                        <br />
                        <div class="form-group">
                            <div class="row justify-content-around">
                                <div class="col-4">
                                  <button type="cancel" class="btn btn-danger btn-block">Cancel</button>
                                </div>
                                <div class="col-4">
                                    <button type="submit" class="btn btn-success btn-block">Submit</button>
                                </div>
                            </div>
                    	</div>
                    </form>
    				</div>
    			</div>
    		</div>
        </div>
    </div>
</form>