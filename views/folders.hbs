<link rel="stylesheet" type="text/css" href="/stylesheets/folders.css">
<link rel="icon" href="https://addons-dev-cdn.allizom.org/favicon.ico">

    <main role="main">

      <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">Your Folders</h1>
          <p class="lead text-muted">Below you will see a list of the folders that you can access, upload new data, and download existing data. To access the contents of a particular folder, click the corresponding 'View' button.</p>
          <p>
            <a href="#" class="btn btn-primary my-2">New Transfer Request</a>
          </p>
        </div>
      </section>

      <div class="album py-5 bg-light">
        <div class="container">
          <div class="row">
          
            {{#each folders}}
            <div class="col-md-3">
              <div class="card mb-4 box-shadow">
                <img class="card-img-top" src="https://cdn3.iconfinder.com/data/icons/tango-icon-library/48/folder-saved-search-512.png" alt="Card image cap">
                <div class="card-body">
                  <p class="card-text"><p class="text-center">{{this}}</p></p>
                      <a href="/folders/{{this}}/contents"><button type="button" class="btn btn-block btn-outline-secondary">View</button></a>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
      </div>

    </main>